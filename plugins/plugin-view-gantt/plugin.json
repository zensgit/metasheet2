{
  "manifestVersion": "2.0.0",
  "name": "plugin-view-gantt",
  "version": "1.0.0",
  "displayName": "甘特图视图",
  "description": "提供专业的甘特图视图，支持任务依赖、进度跟踪和关键路径分析，适合项目管理和时间规划",
  "author": {
    "name": "MetaSheet Team",
    "email": "plugins@metasheet.io"
  },
  "engine": {
    "metasheet": ">=2.0.0",
    "node": ">=16.0.0"
  },
  "main": "dist/index.js",
  "capabilities": {
    "views": [
      "gantt"
    ],
    "workflows": [],
    "functions": []
  },
  "contributes": {
    "views": [
      {
        "id": "gantt",
        "name": "Gantt",
        "component": "GanttView",
        "icon": "mdi-chart-gantt",
        "order": 80,
        "location": "hidden"
      }
    ]
  },
  "permissions": {
    "database": {
      "read": [
        "*"
      ],
      "write": [
        "*"
      ]
    },
    "http": {
      "internal": true
    },
    "filesystem": {
      "read": [
        "*"
      ]
    }
  },
  "license": "MIT"
}
