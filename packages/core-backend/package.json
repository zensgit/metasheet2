{
  "name": "@metasheet/core-backend",
  "version": "2.5.0",
  "description": "MetaSheet backend core - microkernel architecture",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:cache": "tsc -p tsconfig.cache.tests.json",
    "dev": "tsx watch src/index.ts",
    "dev:core": "tsx src/index.ts",
    "migrate": "tsx src/db/migrate.ts",
    "db:list": "tsx src/db/migrate.ts --list",
    "db:reset": "tsx src/db/migrate.ts --reset",
    "db:rollback": "tsx src/db/migrate.ts --rollback",
    "seed:demo": "echo 'Seeding demo data...' && exit 0",
    "seed:rbac": "tsx scripts/seed-rbac.ts",
    "test": "vitest",
    "test:phase5": "vitest --config vitest.phase5.config.ts run",
    "test:unit": "vitest run tests/unit --reporter=dot",
    "test:integration": "vitest --config vitest.integration.config.ts run --reporter=dot",
    "test:cache": "npm run build:cache && TEST_USE_DIST=true vitest --config vitest.cache.config.ts run --reporter=dot",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@wendellhu/redi": "^1.1.0",
    "ajv": "^8.12.0",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "eventemitter3": "^5.0.1",
    "express": "^4.18.2",
    "geoip-lite": "^1.4.10",
    "glob": "^10.3.10",
    "ioredis": "^5.3.0",
    "jsonwebtoken": "^9.0.2",
    "joi": "^18.0.2",
    "kysely": "^0.28.8",
    "pg": "^8.11.3",
    "prom-client": "^15.1.3",
    "redis": "^4.6.10",
    "semver": "^7.7.3",
    "socket.io": "^4.6.1",
    "uuid": "^9.0.1",
    "winston": "^3.17.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.25",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.10.5",
    "@types/pg": "^8.15.5",
    "@types/semver": "^7.7.1",
    "@types/uuid": "^9.0.7",
    "cross-env": "^7.0.3",
    "rimraf": "^5.0.5",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  }
}
