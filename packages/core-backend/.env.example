# Database Configuration
# PostgreSQL connection string
DATABASE_URL=postgres://user:password@localhost:5432/metasheet_dev

# Feature Flags (for local development/testing only, defaults to false in production)
# Enable Kysely database layer
USE_KYSELY=false

# Enable Kanban data persistence to database
KANBAN_DB=false

# Enable workflow engine
WORKFLOW_ENABLED=false

# Enable ViewService unification layer (baseline stub)
# This is a baseline abstraction for incremental ViewService rollout
FEATURE_VIEWSERVICE_UNIFICATION=false

# Enable table-level RBAC permission checks (MVP: allow all authenticated)
# This is a baseline abstraction for incremental RBAC rollout
FEATURE_TABLE_RBAC_ENABLED=false

# Server Configuration
PORT=8900
HOST=0.0.0.0

# Database Pool Configuration (optional)
PGPOOL_MAX=10
PG_IDLE_TIMEOUT_MS=30000
PG_CONN_TIMEOUT_MS=5000

# JWT Configuration (optional, for authentication)
JWT_SECRET=your-secret-key-here
JWT_EXPIRES_IN=7d

# Environment
NODE_ENV=development

# Logging Level
LOG_LEVEL=info

# CORS Configuration (optional)
CORS_ORIGIN=http://localhost:8899

# Plugin Directories (optional, comma-separated)
PLUGIN_DIRS=../../plugins

# Cache Configuration (Phase 1 - Observability)
# Enable observability mode (currently always uses NullCache)
FEATURE_CACHE=false

# Phase 3: Redis cache implementation selector
# Will be used when plugin-cache-redis is available
# CACHE_IMPL=null