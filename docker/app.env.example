NODE_ENV=production
HOST=0.0.0.0
PORT=8900
# Shell/product mode:
# - platform: show full MetaSheet navigation
# - attendance: attendance-focused shell (standalone attendance product)
PRODUCT_MODE=platform
JWT_SECRET=change-me
DATABASE_URL=postgres://metasheet:change-me@postgres:5432/metasheet
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
# When enabled, attendance import preview/commit requires short-lived DB-backed tokens.
# This must be enabled for production to avoid non-deterministic behavior after restarts / multi-node deploys.
ATTENDANCE_IMPORT_REQUIRE_TOKEN=1
# Attendance import upload channel (csvFileId) storage.
# NOTE: docker-compose.app.yml mounts a persistent volume at `/app/uploads/attendance-import` by default.
ATTENDANCE_IMPORT_UPLOAD_DIR=/app/uploads/attendance-import
POSTGRES_USER=metasheet
POSTGRES_PASSWORD=change-me
POSTGRES_DB=metasheet
